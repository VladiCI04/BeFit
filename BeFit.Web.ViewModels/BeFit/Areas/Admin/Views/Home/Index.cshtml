@{
	ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
	<h2 class="display-4">Hello, Admin!</h2>
	<p class="lead mb-1 mt-3">
		This is your administrator area - you can <b>read</b>, <b>create</b>,
		<b>delete</b> and <b>edit</b> events.
		<br />You can <b>join</b> and <b>leave</b> too!
	</p>
	<p class="lead mt-1">
		You can also see <b>all users and coaches</b> and <b>all events</b> in the
		system.
	</p>
	<hr class="my-4">
	<a asp-area="" asp-controller="Event" asp-action="All"
	   class="btn btn-primary btn-lg">All Events</a>
	<span> | </span>
	<a asp-area="" asp-controller="Event" asp-action="Add"
	   class="btn btn-primary btn-lg">Add Event</a>
	<span> | </span>
	<a asp-area="Admin" asp-controller="Event" asp-action="Mine"
	   class="btn btn-primary btn-lg">My Events</a>
	<span> | </span>
	<a asp-area="Admin" asp-controller="User" asp-action="All"
	   class="btn btn-primary btn-lg">All Users</a>
</div>
