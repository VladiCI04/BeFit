@model EventFormModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="Title"></label>
				<input asp-for="Title" class="form-control" placeholder="Title...">
				<span asp-validation-for="Title" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address"></label>
				<input asp-for="Address" class="form-control"
					   placeholder="Address...">
				<span asp-validation-for="Address" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" rows="4" class="form-control"
						  placeholder="Two bedrooms..."></textarea>
				<span asp-validation-for="Description" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ImageUrl"></label>
				<input asp-for="ImageUrl" class="form-control" placeholder="Your
fine URL here...">
				<span asp-validation-for="ImageUrl" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Tax"></label>
				<input asp-for="Tax" class="form-control">
				<span asp-validation-for="Tax" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="EventCategoryId"></label>
				<select asp-for="EventCategoryId" class="form-control">
					@foreach (var category in Model.EventCategories)
					{
						<option value="@category.Id">@category.Name</option>
					}
				</select>
				<span asp-validation-for="EventCategoryId" class="small textdanger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Start" class="form-label-add-edit">Start</label>
				<input asp-for="Start" class="form-control" aria-required="true" value="@DateTime.Now.ToString("yyyy-MM-dd H:mm")" />
				<span asp-validation-for="Start" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="End" class="form-label-add-edit">End</label>
				<input asp-for="End" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd H:mm")" />
				<span asp-validation-for="End" class="text-danger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>
